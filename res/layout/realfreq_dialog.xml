<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView 
        android:id="@+id/frequence_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/d10"
        android:textSize="@dimen/d20"
        android:text="@string/frequnce_selete"/>
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/deepskyblue"
        android:layout_margin="@dimen/d10"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/location_frequence_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d20"
            android:layout_centerVertical="true"
            android:text="@string/location_frequnce" />

        <Spinner
            android:id="@+id/location_frequence_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/d10"
            android:entries="@array/location_frequence" />
    </RelativeLayout>

</LinearLayout>
