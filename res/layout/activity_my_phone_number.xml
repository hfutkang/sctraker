<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sctek.tracker.MyPhoneNumberActivity" >

    <TextView
        android:id="@+id/self_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginTop="@dimen/d110"
        android:textSize="@dimen/d16"
        android:text="@string/self_num" />
    
    <EditText 
            android:id="@+id/self_num_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d35"
            android:layout_below="@id/self_num_tv"
            android:layout_marginLeft="@dimen/d30"
            android:layout_marginRight="@dimen/d30"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/bordershape"
            android:inputType="phone"
            android:paddingLeft="2dp"/>
    
    <Button 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="@dimen/d10"
			android:layout_alignParentBottom="true"
			android:background="@drawable/image_button_selector"
			android:text="@string/save"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:textSize="@dimen/d20"
			android:onClick="onOkButtonClicked"/>

</RelativeLayout>
